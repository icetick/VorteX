<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent">

    <data>

        <variable
            name="viewModel"
            type="alex.orobinsk.vortex.ui.viewModel.RadioViewModel" />

        <import type="alex.orobinsk.vortex.ui.widgets.ToolbarModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentScrim="@color/transparent"
        android:layout_marginTop="15dp"
        android:fitsSystemWindows="false">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@{@drawable/vortex}"
            tools:src="@drawable/nebula_stars" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_card_text_title_horizontal"
                android:layout_marginEnd="@dimen/margin_card_text_title_horizontal"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/margin_login"
                app:callbackHandler="@{viewModel}"
                app:listItems="@{viewModel.radioResponse}"
                app:listLayout="@{@layout/item_recycler_radio_channel}" />
        </RelativeLayout>

        <include
            layout="@layout/toolbar"
            app:toolbarModel="@{viewModel.toolbarModel}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>